# Mesh Bridge "<%= @mesh_name %>"
auto br-<%= @mesh_code %>
iface br-<%= @mesh_code %> inet6 static
  bridge-ports none
  pre-up    /sbin/ip rule add iif $IFACE table 42
  pre-up    /sbin/ip rule add oif $IFACE table 42
  post-down /sbin/ip rule del iif $IFACE table 42
  post-down /sbin/ip rule del oif $IFACE table 42
  pre-up     /sbin/ip -6 route replace unreachable default table 42
  post-up    /sbin/ip -6 route replace <%= @mesh_prefix_ipv6 %> dev $IFACE table 42
  address <%= @mesh_ipv6 %>
  # TODO bits configurable
  netmask 64
iface br-<%= @mesh_code %> inet static
  pre-up     /sbin/ip route replace unreachable default table 42
  post-up    /sbin/ip addr add <%= @mesh_ipv4_network %> dev $IFACE table 42
  address <%= @mesh_ipv4 %>
  netmask <%= @mesh_prefix_ipv4%>
