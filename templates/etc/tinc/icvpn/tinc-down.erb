#!/bin/sh
/sbin/ip -4 addr del dev $INTERFACE <%= @icvpn_ipv4_address%>/16
/sbin/ip -6 addr del dev $INTERFACE <%= @icvpn_ipv6_address%>/96
/sbin/ip link set dev $INTERFACE down
/sbin/ip rule del pref 31000 iif $INTERFACE table 42
/sbin/ip rule del pref 31001 iif $INTERFACE unreachable
/sbin/ip -6 rule del pref 31000 iif $INTERFACE table 42
/sbin/ip -6 rule del pref 31001 iif $INTERFACE unreachable
