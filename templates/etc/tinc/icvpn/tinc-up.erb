#!/bin/sh
/sbin/ip rule add pref 31000 iif $INTERFACE table 42
/sbin/ip rule add pref 31001 iif $INTERFACE unreachable
/sbin/ip -6 rule add pref 31000 iif $INTERFACE table 42
/sbin/ip -6 rule add pref 31001 iif $INTERFACE unreachable
/sbin/ip link set dev $INTERFACE up
/sbin/ip -4 addr add dev $INTERFACE <%= @icvpn_ipv4_address%>/16
/sbin/ip -6 addr add dev $INTERFACE <%= @icvpn_ipv6_address%>/96 preferred_lft 0
