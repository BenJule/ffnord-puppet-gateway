#!/bin/bash

IP4TABLES=$(which iptables)
IP6TABLES=$(which ip6tables)

function ip4tables() {
  echo -e "\t iptables $*"
  $IP4TABLES $*
}

function ip6tables() {
  echo -e "\t ip6tables $*"
  $IP6TABLES $*
}

function ip46tables() {
  ip4tables $*
  ip6tables $*
}

for rules in /etc/iptables.d/*; do
   echo "File: $rules"
   . $rules
done
